args = "python main.py"

[[workflows.workflow]]
name = "Web Server"
author = 39735059

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "hypercorn app:app --bind 0.0.0.0:5000"

[deployment]
run = ["sh", "-c", "hypercorn app:app --bind 0.0.0.0:5000"]
build = ["sh", "-c", "pip install -r requirements.txt hypercorn psycopg2-binary"]

